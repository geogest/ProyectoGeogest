@model IList<string[]>

<div class="table-responsive">
    <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
        <thead>
            <tr>
                <th class="FontSize text-center">CÓDIGO</th>
                <th class="FontSize text-center">CUENTACONTABLE</th>
                <th class="FontSize text-center">TOTAL CTA CONTABLE</th>
            </tr>
        </thead>
        <tbody>
            @foreach (string[] rowThingie in Model)
            {
                @:<tr class="odd gradeX">
                    for (int i = 0; i < rowThingie.Length; i++)
                    {
                        string classAlign = "text-left";
                        if (i == 2 || i == 3)
                        {
                            classAlign = "text-center";
                        }
                        if (rowThingie[0] != null && rowThingie[0].Length == 6 && i == 0)
                        {
                            classAlign = "text-right";
                        }
                        <td class="@classAlign">@rowThingie[i]</td>
                    }

                @:</tr>
            }
        </tbody>
    </table>
</div>


