<!-- Page-Title -->
<div class="row">
    <div class="col-lg-12">
        <div class="page-header-2">
            <h2 class="page-header">Parametros Clientes Contables</h2>
            <ol class="breadcrumb">
                <li>
                    <a href="#">Contabilidad</a>
                </li>
                <li>
                    <a href="#">-</a>
                </li>
                <li class="active">
                    Parametros
                </li>
            </ol>
        </div>
    </div>
</div>


@using (Html.BeginForm("CambiarParametrosCliente", "Contabilidad", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label class="col-md-3 control-label">Cuenta Contable Ventas</label>
        <div class="col-md-7">
            <select id="ctaventa" name="ctaventa" class="selectpicker show-tick form-control" data-live-search="true" data-size="10" title="Ninguno">
                @Html.Raw(ViewBag.CuentaVentas)
            </select>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-3 control-label">Cuenta Iva Ventas</label>
        <div class="col-md-7">
            <select id="ivaventa" name="ivaventa" class="selectpicker show-tick form-control" data-live-search="true" data-size="10" title="Ninguno">
                @Html.Raw(ViewBag.CuentaIVAVentas)
            </select>
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-3 control-label">Cuenta Contable Compras</label>
        <div class="col-md-7">
            <select id="ctacompra" name="ctacompra" class="selectpicker show-tick form-control" data-live-search="true" data-size="10" title="Ninguno">
                @Html.Raw(ViewBag.CuentaCompras)
            </select>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-3 control-label">Cuenta Iva Compra</label>
        <div class="col-md-7">
            <select id="ivacompra" name="ivacompra" class="selectpicker show-tick form-control" data-live-search="true" data-size="10" title="Ninguno">
                @Html.Raw(ViewBag.CuentaIVACompras)
            </select>
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-3 control-label">Cuenta Retencion Honorarios</label>
        <div class="col-md-7">
            <select id="retencion" name="retencion" class="selectpicker show-tick form-control" data-live-search="true" data-size="10" title="Ninguno">
                @Html.Raw(ViewBag.CuentaIVAHonorarios)
            </select>
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-3 control-label">Cuenta Retencion Honorarios</label>
        <div class="col-md-7">
            <select id="retencion2" name="retencion2" class="selectpicker show-tick form-control" data-live-search="true" data-size="10" title="Ninguno">
                @Html.Raw(ViewBag.CuentaIVAHonorarios2)
            </select>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-6">
            <button class="btn btn-success waves-effect waves-light" value="Ingresar Parametros" name="Save" type="submit"><span class="btn-label"><i class="ion-android-add"></i></span>Guardar</button>
        </div>
        <div class="col-md-6">
            <a href="@Url.Action("ListarCliente", "Home")" class="btn btn-success waves-effect waves-light"><span class="btn-label"><i class="ion-android-arrow-back"></i></span>Volver</a><br>
        </div>
    </div>
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/css/select2.min.css" rel="stylesheet" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/js/select2.min.js"></script>

<script>
    $(document).ready(function () {
        $('select').select2();
    });
</script>