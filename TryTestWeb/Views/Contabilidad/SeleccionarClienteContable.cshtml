@model IList<ClientesContablesModel>
@{
    ViewBag.Title = "Seleccionar Cliente Contable";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/css/Contabilidad/SeleccionarClienteContable.css" rel="stylesheet" type="text/css" />

<p class="text-muted m-b-30 "></p>

<div class="row">
    <div class="panel panel-default">
        <div class="col-md-12 col-xs-12 col-lg-12 panel-heading tamanoContenido">
            <div class="col-md-7 col-sm-7 col-xs-12 col-md-offset-0 col-sm-offset-0">
                <h1 class="division">Selecciona tu Cliente Contable</h1>
            </div>
            <div class="col-md-5 col-sm-5 col-xs-3 col-xs-offset-9 col-md-offset-0 col-sm-offset-0">
                @if (Model.Count() > 0)
                {
                    <a href="@Url.Action("NuevoClienteContable","Contabilidad")" class="btn btn-success btn-small pull-right waves-effect waves-light tamanoContenido" data-overlaySpeed="200" data-overlayColor="#36404a">
                        <span class="btn-label"><i class="ion-android-add"></i></span>
                        Clientes Contables
                    </a>
                }
                @if (Model.Count() == 0)
                {
                    <br />
                    <div class="alert alert-danger" role="alert">
                        No se encontraron clientes contables
                    </div>
                    if (ViewBag.PerfilUsuario != null)
                    {
                        if (ViewBag.PerfilUsuario == "Admin" || ViewBag.PerfilUsuario == "SuperAdmin")
                        {
                            <a class="btn btn-primary" href="@Url.Action("NuevoClienteContable","Contabilidad")">
                                <span class="btn-label">
                                    <i class="ion-android-add"></i>
                                </span>Crea clientes contables pinchando aquí
                            </a>
                        }
                    }
                }
            </div>
        </div>
        <div class="col-md-12 col-xs-12">
            <div class="row">
                @using (Html.BeginForm("SeleccionarClienteContable", "Contabilidad", FormMethod.Post))
                {
                    <div class="col-lg-10 col-md-10 col-sm-8 col-xs-12">
                        <input class="form-control" type="text" name="ClienteContable" value="" placeholder="Buscar cliente Contable" />
                    </div>
                    <div class="col-lg-2 col-md-2 col-sm-2 col-xs-1 col-xs-offset-7 col-sm-offset-0 col-md-offset-0 col-lg-offset-0">
                        @Html.BtnBuscar("","","mgt","")
                    </div>
                }

            </div>

        </div>
        <div class="panel-body">
            @if (Model.Count() != 0)
            {

                foreach (var ClienteContable in Model)
                {

                    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
                        <a href="javascript:SelecCliente('@ClienteContable.ClientesContablesModelID');">
                            <div class="card">
                                <img src="~/Content/images/usuario.png" alt="usuario" class="usuarioimg" />
                                <p class="letras text-center">@ClienteContable.RazonSocial</p>
                                <p class="letras text-center">@ClienteContable.RUTEmpresa</p>
                                
                                @Html.BtnSeleccionar("", "", "btn-xs botonesDetalle", "javascript:SelecCliente(" + @ClienteContable.ClientesContablesModelID + ");")
                            </div>
                        </a>
                    </div>
                }

            }
        </div>
    </div>
</div>

<script src="~/Content/js/Contabilidad/SeleccionarClienteContable.js"></script>