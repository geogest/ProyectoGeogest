@model IList<ClientesContablesModel>
@{
    ViewBag.Title = "Seleccionar Cliente Contable";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/css/SeleccionarClienteContable.css" rel="stylesheet" type="text/css" />

<p class="text-muted m-b-30 "></p>

    <div class="row">
        <div class="panel panel-default">
            <div class="col-md-12 panel-heading tamanoContenido">
                <div class="col-md-6 col-xs-9">
                    <h1 class="division">Selecciona tu Cliente Contable</h1>
                </div>
                <div class="col-md-6 col-xs-3 padingtop">
                    @if (Model.Count() > 0)
                    {
                        <a href="@Url.Action("NuevoClienteContable","Contabilidad")" class="btn btn-success btn-small pull-right waves-effect waves-light tamañoContenido division" data-overlaySpeed="200" data-overlayColor="#36404a">
                            <span class="btn-label"><i class="ion-android-add"></i></span>
                            Clientes Contables
                        </a>
                        <br />
                    }
                                @if (Model.Count() == 0)
                                {
                                    <br />
                                    <div class="alert alert-danger" role="alert">
                                        No se encontraron clientes contables
                                    </div>
                                    if (ViewBag.PerfilUsuario != null)
                                    {
                                        if (ViewBag.PerfilUsuario == "Admin" || ViewBag.PerfilUsuario == "SuperAdmin")
                                        {
                                            <a class="btn btn-primary" href="@Url.Action("NuevoClienteContable","Contabilidad")"><span class="btn-label"><i class="ion-android-add"></i></span>Crea clientes contables pinchando aquí</a>
                                        }
                                    }
                                }
                </div>
            </div>
            <div class="col-md-12 col-xs-12">
                <div class="row">
                    @using (Html.BeginForm("SeleccionarClienteContable", "Contabilidad", FormMethod.Post))
                    {
                        <div class="col-md-10 col-xs-9" style="padding-left:35px">
                            <input class="form-control" type="text" name="ClienteContable" value="" placeholder="Buscar cliente Contable" />
                        </div>
                        <div class="col-md-2 col-xs-3">
                            <button class="btn btn-success" type="submit">Buscar</button>
                        </div>
                    }

                </div>

            </div>
            <div class="panel-body">
                @if (Model.Count() != 0)
                {

                    foreach (var ClienteContable in Model)
                    {

                        <div class=" col-xs-12 col-sm-6 col-md-3">
                            <a href="javascript:SelecCliente('@ClienteContable.ClientesContablesModelID');">
                                <div class="card">
                                    <img src="~/Content/images/usuario.png" alt="usuario" class="usuarioimg" />
                                    <p class="letras text-center">@ClienteContable.RazonSocial</p>
                                    <p class="letras text-center">@ClienteContable.RUTEmpresa</p>
                                    <button type="button" class="btn btn-xs botonesDetalle"> 
                                        <a class="letras" href="javascript:SelecCliente('@ClienteContable.ClientesContablesModelID')" ;>seleccionar</a>
                                    </button>

                                </div>
                            </a>
                        </div>
                    }

                }
            </div>
        </div>
    </div>

    <style>
        
        .division {
        }


    </style>

<script src="~/Content/js/SeleccionarClienteContable.js"></script>