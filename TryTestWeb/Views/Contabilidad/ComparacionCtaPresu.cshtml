@model IList<string[]>

@{
    ViewBag.Title = "ComparacionCtaPresu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-sm-12">
        <div class="btn-group pull-right margen">
            <form role="form">
                <div class="button-list col-lg-12">
                    <div class="col-lg-12">
                        @using (Html.BeginForm("GetExcelPresupuesto", "Contabilidad", FormMethod.Post))
                        {
                            @Html.BtnExportar("", "Save")
                        }
                    </div>
                </div>
            </form>
        </div>
            <div class="page-header-2">
                <h2 class="page-header">Reporte Presupuesto</h2>
                <ol class="breadcrumb">
                    <li>
                        <a href="#">Contabilidad Reportes</a>
                    </li>
                    <li>
                        <a href="#">-</a>
                    </li>
                    <li class="active">
                        Informe Contabilidad
                    </li>
                </ol>
            </div>
        </div>
    
</div>

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="col-lg-12 panel-heading">
                    <h3 class="text-center">Nombre: @ViewBag.NombrePresupuesto</h3>
                </div>
                <div class="panel-body">
                    <div class="col-lg-12 m-t-20 m-b-20">
                        <b>Fecha Inicio: </b>@ViewBag.FechaInicio  <b>Fecha Vencimiento: </b>@ViewBag.FechaVencimiento
                    </div>
                    <div class="col-lg-12 table-responsive">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                                <tr>
                                    <th class="text-center">Codigo</th>
                                    <th class="text-center">Nombre</th>
                                    <th class="text-center">Presupuesto</th>
                                    <th class="text-center">Gasto Real</th>
                                    <th class="text-center">Variacion</th>
                                    <th class="text-center">Porcentaje % </th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (string[] TablaCuentaCont in Model)
                                {

                                    @:  <tr class="odd gradeX">
                                        for (int i = 0; i < TablaCuentaCont.Length - 1; i++)
                                        {
                                            //2 Presupuesto
                                            //3 Gasto Real
                                            string Estilo = "";
                                            if (i == 4 || i == 5)
                                            {
                                                if (TablaCuentaCont[6] == "Success")
                                                {
                                                    Estilo = "text-success";
                                                }
                                                else if (TablaCuentaCont[6] == "Danger")
                                                {
                                                    Estilo = "text-danger";
                                                }
                                            }
                                            <td class="@Estilo">@TablaCuentaCont[i]</td>
                                        }

                                    @: </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                
                <div class="col-lg-12">
                    
                </div>
            </div>
        </div>
    </div>
</div>

<link href="~/Content/css/Contabilidad/ComparacionCtaPresu.css" rel="stylesheet" />