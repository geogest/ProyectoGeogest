            idFolio:idFila.id
        } 

        console.log(IdentidadFolioConsultado);

        const FoliosAComparar = [
              {
                idFolio:"",
                folio:""        
              }
        ];

        for (var i = 0; i < FolioCollection.length; i++) {
            FoliosAComparar.push({ idFolio: FolioCollection[i].id, folio: FolioCollection[i].textContent});
        }

        console.log(FoliosAComparar);

        const BuscaFolioAFocusear = FoliosAComparar.filter(x => x.folio == IdentidadFolioConsultado.folio && x.idFolio != IdentidadFolioConsultado.idFolio);
        console.log(BuscaFolioAFocusear);

        let ElementoEncontrado = document.getElementById(BuscaFolioAFocusear[0].idFolio);


        let ElementoClickeado = document.getElementById(IdentidadFolioConsultado.idFolio).firstChild;
        ElementoClickeado.setAttribute('href','#'+BuscaFolioAFocusear[0].idFolio)

        console.log(ElementoClickeado);
        
        

        console.log(ElementoEncontrado);
        


    }
</script>