<div class="row">

    <div class="col-lg-4">

        <p class="text-muted m-b-10 "></p>
        <div class="card-box p-0">
            <div class="profile-widget text-center">
                <div class="bg-custom bg-profile"></div>
                <img src="~/Content/images/avat.jpg" class="thumb-lg img-circle img-thumbnail" alt="img">
                <h4>@User.Identity.GetUserName()</h4>
                <p class="text-muted"><i class="fa fa-map-marker"></i> Chile</p>
                <h3 class="m-t-20 text-muted p-10"><span><b>Datos FacturaLabs</b></span></h3>
                <div class="row">
                    <div class="col-lg-6">
                        <h4><span>Soporte</span></h4>
                        <p><a href="#">soporte@facturalabs.cl</a></p>
                    </div>
                    <div class="col-lg-6">
                        <h4><span>Ventas</span></h4>
                        <p><a href="#">ventas@facturalabs.cl</a></p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <h4><span>Indicadores Económicos</span></h4>
                        <iframe src="http://bci.show.finmarketslive.cl/www/widget3.html" width="100%" height="170" frameborder="0" scrolling="no"></iframe>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <div class="col-md-8">

        <p class="text-muted m-b-10"></p>
        <div class="panel panel-default  text-center slider-bg" style="height:600px;">
            <div class="panel-body p-0">
                <div class="">
                    <div id="owl-slider" class="owl-carousel">
                        <div class="item">
                            <h1 class="m-t-20 text-wrap font-600">Hey! Bienvenido a FacturaLabs</h1>
                            <h4 class="m-t-20 text-muted">Ahorra tiempo y dinero, administrando tu contabilidad </h4>
                            @*<p class="m-t-30"><em>Estas listo para comenzar a trabajar en tu portal Efactu, </em></p>*@
                        </div>
                        <div class="item m-t-40">
                            @*<h3 class="m-t-20 text-primary font-600">Selecciona Tu Empresa !!</h3>*@
                            <p class="text-muted m-b-20 "></p>
                            <table width="100%" class="tablesaw m-t-20 table m-b-0 table-bordered panel-color panel-default" id="tablaCliente">
                                <thead>
                                    <tr>
                                        <th class="text-center text-white">Rut Empresa</th>
                                        <th class="text-center text-white">Razón Social</th>
                                        <th class="text-center text-white">Seleccionar</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        foreach (var Emisor in Model)

                                        {
                                            <tr id="@Emisor.QuickEmisorModelID">
                                                <td>@Emisor.RUTEmpresa</td>
                                                <td>@Emisor.RazonSocial</td>
                                                <!-- label-facturalabs -->
                                                <td><a href="javascript:SelecCliente('@Emisor.QuickEmisorModelID');"><span class="label label-table label-primary">Has Click Aqui!</span></a></td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div>

    </div>

</div>


<script>


                function SelecCliente(idEmisor)
                {
                    $.ajax({
                        url: "DoSeleccionarEmisorModulos?EmisorID=" + idEmisor,
                        success: function (response)
                        {
                            if (response != null && response.success)
                            {
                               // alert(response.inicio);
                                document.location.href = "/"+response.inicio;//"/Home/Index";
                            }
                            else
                            {
                                alert("No se puede operar con este emisor");
                            }
                        }
                    });
                }
</script>
