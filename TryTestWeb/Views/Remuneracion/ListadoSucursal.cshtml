@model List<SucursalRemuModels>

@{
    ViewBag.Title = "Agregar Sucursal";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />

<h2>Agregar Sucursal</h2>

@using (Html.BeginForm("InsertarSucursal", "Remuneracion", FormMethod.Post, new { id = "InsertarSucursal" }))
{


    <div class="form-horizontal">
        
        <hr />
        <div class="form-group">
            
            <div class="col-md-10">
                <label>Crea Sucursal</label>
                <input class="form-control" type="text" name="NombreSucursal" id="NombreSucursal" value="" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Crear" class="btn btn-default" />
            </div>
        </div>
    </div>
}


<table class="table">

    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Nombre Sucursal</th>
        </tr>
    </thead>
    <tbody>
        @{int count = 0;}
        @foreach (var Sucursal in Model)
        {
            <tr>
                <th scope="row">@(count + 1)</th>
                <td>@Sucursal.NombreSucursal</td>
            </tr>

            {count++;
            }
        }
    </tbody>
</table>






