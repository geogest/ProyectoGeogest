@model List<TryTestWeb.Models.Monitoreo.MonitoreoSesionViewModel.MonitoreoSesionViewModel>
@{
    ViewBag.Title = "ControlarEstadoSesion";
}

<div class="row">
    
    <div class="container">
        <h2>Usuarios Activos</h2>
        <div class="table-responsive panel panel-default">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <td>Nombre</td>
                        <td>Estado</td>
                    </tr>
                </thead>
                <tbody>

                    @if (Model != null)
                    {
                        foreach (var usuario in Model)
                        {
                            <tr>
                                <td>@usuario.Nombre</td>
                                @if (usuario.EstaActivo)
                                {
                                    <td><span class="green">Activo</span></td>
                                }
                                else
                                {

                                    <td><span class="red">Inactivo</span></td>

                                }

                            </tr>
                        }

                    }


                </tbody>
            </table>
        </div>
    </div>
</div>

<style>

    span.green {
        width: 250px;
        height: 100px;
        background: #1f8a21;
        color: white;
        padding: 4px;
        font-size: 12px;
        -webkit-box-shadow: 2px 2px 3px 0px rgba(50, 50, 50, 0.75);
        -moz-box-shadow: 2px 2px 3px 0px rgba(50, 50, 50, 0.75);
        box-shadow: 2px 2px 3px 0px rgba(50, 50, 50, 0.75);
    }
    span.red {
        width: 250px;
        height: 100px;
        background: red;
        color: white;
        padding: 4px;
        font-size: 12px;
        -webkit-box-shadow: 2px 2px 3px 0px rgba(50, 50, 50, 0.75);
        -moz-box-shadow: 2px 2px 3px 0px rgba(50, 50, 50, 0.75);
        box-shadow: 2px 2px 3px 0px rgba(50, 50, 50, 0.75);
    }
    div.row {
    margin-top:50px;
    }
</style>