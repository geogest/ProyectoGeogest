@using TryTestWeb.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
    Layout = null;
    bool demo = false;
    string DemoObj = Request.QueryString["demo"];
    if (string.IsNullOrWhiteSpace(DemoObj) == false)
    {
        demo = true;
    }
}

<html lang="en">
<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>GeoGest Sistema de Contabilidad</title>
    <meta name="description" content="Sistema de contabilidad online">
    <meta name="author" content="GeoGest">

    @Styles.Render("~/bundles/template2css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/JQueros")

    @Scripts.Render("~/bundles/jqueryval")


    </head>
    <body>
    
    <div class="account-pages"></div>
    <div class="clearfix"></div>
    <div class="wrapper-page">
        <div class="card-box">
            <div class="panel-heading">
                <img src="~/Content/images/Logo/logogeogestinicio.png" height="100" class="center-block" />
               
                @*<h2 class="text-center"> Ingresa en <strong class="text-custom">Efactu</strong> </h2>*@
                <h5 class="text-center subtext">Sistema de contabilidad online</h5>
            </div>


            <div class="panel-body">

                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <fieldset>
                        <div class="form-group">
                            <div class="col-xs-12">
                                @Html.TextBoxFor(m => m.Login, new { @class = "form-control", @placeholder = "Correo", @autofocus = "" })
                            </div>
                        </div>
                        <br />
                        <p></p>
                        <div class="form-group">
                            <div class="col-xs-12">
                                 @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Contraseña" })  
                            </div>
                        </div>
                        <br />
                        <br />
                        <p></p>
                        <div class="form-group ">
                            <div class="col-xs-12">
                                <div class="checkbox checkbox-primary">
                                    <input id="checkbox-signup" type="checkbox" name="RememberMe" id="checkbox-signup">
                                    <label for="checkbox-signup">
                                        Recordar mis datos
                                    </label>
                                </div>
                            </div>
                        </div>
                        <br />
                        <br />
                        <p></p>
                        <div class="form-group text-center m-t-40">
                            <div class="col-xs-12">
                                <button class="btn btn-primary btn-block text-uppercase waves-effect waves-light" type="submit" value="Entrar">Ingresar</button>
                            </div>
                        </div>
                    </fieldset>

                }

                <div class="row">
                    @Html.ValidationMessageFor(m => m.Login, "", new { @class = "text-danger" })
                </div>
                <div class="row">
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group m-t-30 m-b-0">
                        <div class="col-sm-12">
                            <a href="@Url.Action("ForgotPassword", "Account")" class="text-dark"><i class="fa fa-lock m-r-5"></i> Olvidé mi contraseña?</a>
                        </div>
                    </div>
                </div>
            <!--Fin panel-body -->

          </div>
        <!-- Fin card-box -->
    </div>
    <!-- Fin wrapper-page 
        <div class="row">
            <div class="col-sm-12 text-center text-white">
                <p>No tienes una cuenta? <a href="https://www.facturalabs.cl/planes-facturacion-electronica/#planesfacturacion" class="text-dark m-l-5"><b>Contrata Tu Plan!</b></a></p>

            </div>
        </div> -->


    <script>
            var resizefunc = [];
    </script>
    <!-- AMA [20-03-2018] : Se generan cambios de layout-->
    @Scripts.Render("~/bundles/template2js")
    @Scripts.Render("~/bundles/jqueryval")
</body>
</html>

<script>  
    @if (demo)
    {
        @:$('#Login').val('demo@e-factu.cl');
        @:$('#Password').val('demo123');
    }
</script>
