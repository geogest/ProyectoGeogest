@using TryTestWeb.Models
@model TryTestWeb.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = null;
}

<html lang="en">
<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/FCOJquery")

    <!--[if lt IE 9]>
        @Scripts.Render("~/bundles/HTML5Shiv")
    <![endif]-->


</head>
<body>
    <div class="container">
        <br>
        <div class="row vertical-offset-100">
            <div class="col-md-4 col-md-offset-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <img src="\Content\images\logofactu.png" class="img-responsive" style="margin: 0 auto; vertical-align: middle;" alt="" />
                    </div>
                </div>
            </div>
        </div>



        <div class="col-md-6 col-md-offset-3">
            <div class="login-panel panel panel-1" style="margin-top: 15%;">
                <div class="panel-heading">
                    <h3 class="panel-title">Crear un nuevo registro</h3>
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <fieldset>
                            @Html.ValidationSummary("", new { @class = "text-danger" })
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @placeholder = "Ingrese un Login" })                               
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Ingrese un Email" })
                            </div>
                            <div class="form-group">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Contraseña" })
                            </div>
                            <div class="form-group">
                               @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "Confirmar Contraseña" })
                            </div>
                            <div class="form-group">
                                <select class="form-control" id="TipoUsuario" name="TipoUsuario" required>
                                    <option>Selecciona</option>
                                    @if (ViewBag.TiposUsuarios != null) { 
                                        foreach (var TipoUsuario in ViewBag.TiposUsuarios)
                                        {
                                        <option value="@TipoUsuario.PerfilUsuarioModelID">@TipoUsuario.NombrePerfil</option>
                                        }
                                    }
                                </select>
                            </div>
                            <div class="form-group">
                                <input type="submit" class="btn btn-lg btn-2 btn-block" value="Crear Cuenta">
                            </div>
                            <hr>
                            <br>
                            <div>
                                <a href="@Url.Action("Login", "Account")" class="btn btn-lg btn-1 btn-block" role="button" style="font-size: 12px;">INGRESAR CUENTA EXISTENTE.</a>
                            </div>
                        </fieldset>
                    }
                </div>
            </div>
        </div>
    </div>
</body>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
</html>