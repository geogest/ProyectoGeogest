@model TryTestWeb.Models.ResetPasswordViewModel
@{
    Layout = null;
    ViewBag.Title = "Reset password";
}

<html>
<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- AMA [20-03-2018] : Se generan cambios de layout-->
    @Styles.Render("~/bundles/template2css")
    @Scripts.Render("~/bundles/modernizr")

    <!--  @Styles.Render("~/Content/css")
      @Scripts.Render("~/bundles/modernizr")
      @Scripts.Render("~/bundles/FCOJquery")-->
    <!--[if lt IE 9]>
        @Scripts.Render("~/bundles/HTML5Shiv")
    <![endif]-->


</head>
<body>
    <div class="container">
        <br>
        <div class="row vertical-offset-100">
            <div class="col-md-4 col-md-offset-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <img src="\Content\images\logofactu.png" class="img-responsive" style="margin: 0 auto; vertical-align: middle;" alt="" />
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-1">
                    <div class="panel-heading">
                        <h3 class="panel-title">Cambio de  Contraseña</h3>
                    </div>
                    <div class="panel-body">
                        <div class="col-lg-12">
                            @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                            {
                                @Html.AntiForgeryToken()

                                @Html.HiddenFor(model => model.Code)

                                <div class="form-group">
                                    @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                                    <div class="col-md-10">
                                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                                    <div class="col-md-10">
                                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
                                    <div class="col-md-10">
                                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <input type="submit" class="btn btn-primary btn-rounded btn-block text-uppercase waves-effect waves-light" value="Reset" />
                                    </div>
                                </div>

                                <div class="col-lg-12 m-t-10">
                                    @Html.ValidationSummary("", new { @class = "text-danger" })
                                </div>
                            }
                        </div>                       
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        var resizefunc = [];
        @if (TempData["ProblemasPagos"] != null)
        {
            @:$("#cajita").attr('class', 'alert alert-warning alert-dismissable');
            @:$("#cajita").text('@(Html.Raw(TempData["ProblemasPagos"]))');
        }
    </script>

    @Scripts.Render("~/bundles/template2js")
</body>


</html>

