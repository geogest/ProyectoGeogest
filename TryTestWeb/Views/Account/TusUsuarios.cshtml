@model IList<UsuarioModel>
@{
    ViewBag.Title = "TusUsuarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />


<div class="row">
    <div class="col-lg-12">
        <div class="page-header-2">
            <h2 class="page-header">Administrador Clientes Contables</h2>
            <ol class="breadcrumb">
                <li>
                    <a href="#">Configuración</a>
                </li>
                <li>
                    <a href="#">Admin</a>
                </li>
                <li class="active">
                    Administrar Usuarios
                </li>
            </ol>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="row form-group">
            <div class="col-md-4">
                <label class="control-label">Tus usuarios</label>
                    <select class="form-control" id="Usuarios" name="Usuarios">
                        <option>Selecciona</option>
                        @foreach (UsuarioModel Usuario in Model)
                        {
                            <option value="@Usuario.UsuarioModelID">@Usuario.Nombre</option>
                        }
                    </select>
            </div>

            <div class="col-md-4">
                <label class="control-label">Clientes Contables Asignados</label>
                <select class="form-control" id="ClientesContables" name="ClientesContables" multiple>
                </select>
            </div>
        </div>
    </div>
</div>

<style>
    #ClientesContables{
        height:250px;
    }
</style>

<script>
